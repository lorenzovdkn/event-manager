{% extends 'base.html.twig' %}

{% block title %}Accueil - EventManager{% endblock %}

{% block body %}
<div class="text-center mb-5">
    <h1 class="display-4 fw-bold mb-3">
        <i class="bi bi-calendar-event text-primary me-3"></i>
        Bienvenue sur EventManager
    </h1>
    <p class="lead text-muted mb-4">Découvrez et participez aux événements à venir</p>
    {% if not app.user %}
        <div class="d-flex gap-3 justify-content-center">
            <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-person-plus me-2"></i>Créer un compte
            </a>
            <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
            </a>
        </div>
    {% endif %}
</div>

<div class="mb-4">
    <h2 class="h3 mb-4">
        <i class="bi bi-stars text-warning me-2"></i>
        Événements à venir
    </h2>
    
    <!-- Filtre par dates -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" action="{{ path('app_home') }}" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="start_date" class="form-label">
                        <i class="bi bi-calendar-check me-1"></i>Date de début
                    </label>
                    <input type="date" class="form-control" id="start_date" name="start_date" value="{{ start_date }}">
                </div>
                <div class="col-md-5">
                    <label for="end_date" class="form-label">
                        <i class="bi bi-calendar-x me-1"></i>Date de fin
                    </label>
                    <input type="date" class="form-control" id="end_date" name="end_date" value="{{ end_date }}">
                </div>
                <div class="col-md-2">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-funnel me-1"></i>Filtrer
                        </button>
                        {% if start_date or end_date %}
                            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-x-circle me-1"></i>Réinitialiser
                            </a>
                        {% endif %}
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{% if events|length > 0 %}
    <div class="row g-4">
        {% for event in events %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    {% if event.image %}
                        <img src="{{ asset('uploads/' ~ event.image) }}" class="card-img-top" alt="{{ event.titre }}" style="height: 220px; object-fit: cover;">
                    {% else %}
                        <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" style="height: 220px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="bi bi-image text-white" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-3">{{ event.titre }}</h5>
                        <p class="card-text text-muted mb-3 flex-grow-1">
                            {{ event.description|length > 120 ? event.description|slice(0, 120) ~ '...' : event.description }}
                        </p>
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-calendar3 text-primary me-2"></i>
                                <small class="text-muted">{{ event.date|date('d/m/Y à H:i') }}</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-geo-alt text-primary me-2"></i>
                                <small class="text-muted">{{ event.lieu }}</small>
                            </div>
                        </div>
                        <a href="{{ path('app_event_show', {id: event.id}) }}" class="btn btn-outline-primary w-100">
                            <i class="bi bi-arrow-right-circle me-1"></i>Voir les détails
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-calendar-x text-muted" style="font-size: 5rem;"></i>
        </div>
        <h3 class="h4 mb-3">Aucun événement à venir</h3>
        <p class="text-muted mb-4">Soyez le premier à créer un événement !</p>
        {% if app.user %}
            <a href="{{ path('app_event_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Créer un événement
            </a>
        {% else %}
            <a href="{{ path('app_register') }}" class="btn btn-primary">
                <i class="bi bi-person-plus me-2"></i>Créer un compte pour commencer
            </a>
        {% endif %}
    </div>
{% endif %}
{% endblock %}
