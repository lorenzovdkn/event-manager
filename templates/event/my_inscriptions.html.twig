{% extends 'base.html.twig' %}

{% block title %}Mes inscriptions{% endblock %}

{% block body %}
<div class="page-header mb-4">
  <h1><i class="bi bi-ticket-perforated-fill me-2"></i>Mes inscriptions</h1>
  <p class="text-muted mb-0">Les événements auxquels vous êtes inscrit</p>
</div>

{% if inscriptions|length > 0 %}
  <div class="row g-4">
    {% for inscription in inscriptions %}
      {% set event = inscription.event %}
      <div class="col-md-6 col-lg-4">
        <div class="card h-100">
          {% if event.image %}
            <img src="{{ asset('uploads/' ~ event.image) }}" class="card-img-top" alt="{{ event.titre }}" style="height: 220px; object-fit: cover;">
          {% else %}
            <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" style="height: 220px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
              <i class="bi bi-image text-white" style="font-size: 3rem; opacity: 0.5;"></i>
            </div>
          {% endif %}
          <div class="card-body d-flex flex-column">
            <div class="mb-2">
              <span class="badge bg-success">
                <i class="bi bi-check-circle me-1"></i>Inscrit le {{ inscription.inscritAt|date('d/m/Y') }}
              </span>
            </div>
            <h5 class="card-title mb-3">{{ event.titre }}</h5>
            <p class="card-text text-muted mb-3 flex-grow-1">
              {{ event.description|length > 120 ? event.description|slice(0, 120) ~ '...' : event.description }}
            </p>
            <div class="mb-3">
              <div class="d-flex align-items-center mb-2">
                <i class="bi bi-calendar3 text-primary me-2"></i>
                <small class="text-muted">{{ event.date|date('d/m/Y à H:i') }}</small>
              </div>
              {% if event.dateFin %}
              <div class="d-flex align-items-center mb-2">
                <i class="bi bi-arrow-right text-info me-2"></i>
                <small class="text-muted">{{ event.dateFin|date('d/m/Y à H:i') }}</small>
              </div>
              {% endif %}
              <div class="d-flex align-items-center mb-2">
                <i class="bi bi-geo-alt text-primary me-2"></i>
                <small class="text-muted">{{ event.lieu }}</small>
              </div>
              <div class="d-flex align-items-center">
                <i class="bi bi-people text-primary me-2"></i>
                <small class="text-muted">{{ event.nombreInscrits }} inscrit(s)</small>
              </div>
            </div>
            <div class="btn-group w-100" role="group">
              <a href="{{ path('app_event_show', {id: event.id}) }}" class="btn btn-outline-primary">
                <i class="bi bi-eye me-1"></i>Voir
              </a>
              <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#desinscriptionModal{{ event.id }}">
                <i class="bi bi-person-dash me-1"></i>Se désinscrire
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal de confirmation de désinscription -->
      <div class="modal fade" id="desinscriptionModal{{ event.id }}" tabindex="-1" aria-labelledby="desinscriptionModalLabel{{ event.id }}" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
              <h5 class="modal-title" id="desinscriptionModalLabel{{ event.id }}">
                <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la désinscription
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p class="mb-0">Êtes-vous sûr de vouloir vous désinscrire de l'événement <strong>{{ event.titre }}</strong> ?</p>
              <p class="text-muted mb-0 mt-2">Vous pourrez vous réinscrire plus tard si vous changez d'avis.</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="bi bi-x-circle me-1"></i>Annuler
              </button>
              <form method="post" action="{{ path('app_event_desinscrire', {id: event.id}) }}" style="display: inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('desinscrire' ~ event.id) }}">
                <button type="submit" class="btn btn-warning">
                  <i class="bi bi-person-dash me-1"></i>Me désinscrire
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% else %}
  <div class="text-center py-5">
    <div class="mb-4">
      <i class="bi bi-ticket-perforated text-muted" style="font-size: 5rem;"></i>
    </div>
    <h3 class="h4 mb-3">Aucune inscription</h3>
    <p class="text-muted mb-4">Vous n'êtes inscrit à aucun événement pour le moment.</p>
    <a href="{{ path('app_events') }}" class="btn btn-primary">
      <i class="bi bi-grid me-2"></i>Découvrir les événements
    </a>
  </div>
{% endif %}
{% endblock %}
