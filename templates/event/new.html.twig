{% extends 'base.html.twig' %}

{% block title %}Créer un événement{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="page-header">
            <h1><i class="bi bi-plus-circle-dotted me-2"></i>Créer un événement</h1>
            <p class="text-muted">Remplissez les informations ci-dessous pour créer votre événement</p>
        </div>

        <div class="card">
            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'needs-validation'}}) }}
                  
                  <div class="mb-4">
                      {{ form_label(form.titre, 'Titre de l\'événement', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                      {{ form_widget(form.titre, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Concert de jazz en plein air'}}) }}
                      {{ form_errors(form.titre) }}
                  </div>

                  <div class="mb-4">
                      {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                      {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Décrivez votre événement en détail...'}}) }}
                      {{ form_errors(form.description) }}
                      <small class="form-text text-muted">Donnez un maximum d'informations pour attirer les participants</small>
                  </div>

                  <div class="row mb-4">
                      <div class="col-md-6">
                          {{ form_label(form.date, 'Date et heure', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                          {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                          {{ form_errors(form.date) }}
                      </div>
                      <div class="col-md-6">
                          {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                          {{ form_widget(form.lieu, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Salle des fêtes, Paris'}}) }}
                          {{ form_errors(form.lieu) }}
                      </div>
                  </div>

                  <div class="mb-4">
                      {{ form_label(form.imageFile, 'Image de l\'événement', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                      {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                      {{ form_errors(form.imageFile) }}
                      <small class="form-text text-muted"><i class="bi bi-info-circle me-1"></i>Formats acceptés: JPEG, PNG, WebP (5 Mo max)</small>
                  </div>

                  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                      <a href="{{ path('app_my_events') }}" class="btn btn-outline-secondary">
                          <i class="bi bi-x-circle me-1"></i>Annuler
                      </a>
                      <button type="submit" class="btn btn-primary btn-lg px-5">
                          <i class="bi bi-check-circle me-1"></i>Créer l'événement
                      </button>
                  </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}