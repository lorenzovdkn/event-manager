{% extends 'base.html.twig' %}

{% block title %}Mes événements{% endblock %}

{% block body %}
<div class="page-header d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="bi bi-bookmark-fill me-2"></i>Mes événements</h1>
    <p class="text-muted mb-0">Gérez vos événements créés</p>
  </div>
  <a class="btn btn-primary" href="{{ path('app_event_new') }}">
    <i class="bi bi-plus-circle me-1"></i>Créer un événement
  </a>
</div>

<div class="row g-4">
  {% for event in events %}
    <div class="col-md-6 col-lg-4">
      <div class="card h-100">
        {% if event.image %}
          <img src="{{ asset('uploads/' ~ event.image) }}" class="card-img-top" alt="{{ event.titre }}" style="height: 220px; object-fit: cover;">
        {% else %}
          <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" style="height: 220px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <i class="bi bi-image text-white" style="font-size: 3rem; opacity: 0.5;"></i>
          </div>
        {% endif %}
        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-3">{{ event.titre }}</h5>
          <p class="card-text text-muted mb-3 flex-grow-1">
            {{ event.description|length > 120 ? event.description|slice(0, 120) ~ '...' : event.description }}
          </p>
          <div class="mb-3">
            <div class="d-flex align-items-center mb-2">
              <i class="bi bi-calendar3 text-primary me-2"></i>
              <small class="text-muted">{{ event.date|date('d/m/Y à H:i') }}</small>
            </div>
            <div class="d-flex align-items-center">
              <i class="bi bi-geo-alt text-primary me-2"></i>
              <small class="text-muted">{{ event.lieu }}</small>
            </div>
          </div>
          <div class="btn-group w-100" role="group">
            <a href="{{ path('app_event_show', {id: event.id}) }}" class="btn btn-outline-primary">
              <i class="bi bi-eye me-1"></i>Voir
            </a>
            <a href="{{ path('app_event_edit', {id: event.id}) }}" class="btn btn-outline-warning">
              <i class="bi bi-pencil me-1"></i>Modifier
            </a>
            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ event.id }}">
              <i class="bi bi-trash me-1"></i>Supprimer
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal de confirmation de suppression -->
    <div class="modal fade" id="deleteModal{{ event.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ event.id }}" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-danger text-white">
            <h5 class="modal-title" id="deleteModalLabel{{ event.id }}">
              <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la suppression
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p class="mb-0">Êtes-vous sûr de vouloir supprimer l'événement <strong>{{ event.titre }}</strong> ?</p>
            <p class="text-muted mb-0 mt-2">Cette action est irréversible.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
              <i class="bi bi-x-circle me-1"></i>Annuler
            </button>
            <form method="post" action="{{ path('app_event_delete', {id: event.id}) }}" style="display: inline;">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
              <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i>Supprimer définitivement
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <div class="col-12">
      <div class="card text-center py-5">
        <div class="card-body">
          <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
          <h4 class="mt-3 mb-2">Aucun événement créé</h4>
          <p class="text-muted mb-4">Commencez par créer votre premier événement</p>
          <a href="{{ path('app_event_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Créer mon premier événement
          </a>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
