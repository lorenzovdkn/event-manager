{% extends 'base.html.twig' %}

{% block title %}{{ event.titre }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-10">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}"><i class="bi bi-house-door me-1"></i>Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_events') }}">Événements</a></li>
                <li class="breadcrumb-item active">{{ event.titre }}</li>
            </ol>
        </nav>

        <div class="card shadow-lg">
            {% if event.image %}
                <img src="{{ asset('uploads/' ~ event.image) }}" class="card-img-top" alt="{{ event.titre }}" style="max-height: 450px; object-fit: cover;">
            {% else %}
                <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" style="height: 450px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <i class="bi bi-calendar-event text-white" style="font-size: 6rem; opacity: 0.3;"></i>
                </div>
            {% endif %}
            
            <div class="card-body p-4 p-md-5">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h1 class="display-5 fw-bold mb-3">{{ event.titre }}</h1>
                        
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            <span class="badge bg-primary fs-6">
                                <i class="bi bi-calendar3 me-1"></i>{{ event.date|date('d/m/Y à H:i') }}
                            </span>
                            {% if event.dateFin %}
                            <span class="badge bg-info fs-6">
                                <i class="bi bi-arrow-right me-1"></i>{{ event.dateFin|date('d/m/Y à H:i') }}
                            </span>
                            {% endif %}
                            <span class="badge bg-secondary fs-6">
                                <i class="bi bi-geo-alt-fill me-1"></i>{{ event.lieu }}
                            </span>
                        </div>
                    </div>
                    
                    {% if app.user and app.user == event.createdBy %}
                        <div class="btn-group">
                            <a href="{{ path('app_event_edit', {id: event.id}) }}" class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>Modifier
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash me-1"></i>Supprimer
                            </button>
                        </div>
                    {% endif %}
                </div>

                <hr class="my-4">

                <div class="mb-4">
                    <h4 class="mb-3"><i class="bi bi-info-circle me-2"></i>Description</h4>
                    <p class="lead text-muted" style="line-height: 1.8;">{{ event.description }}</p>
                </div>

                <hr class="my-4">

                <div class="mb-4">
                    <h4 class="mb-3"><i class="bi bi-people me-2"></i>Participants</h4>
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-person-check-fill fs-3 me-3"></i>
                        <div>
                            <strong class="d-block">{{ event.nombreInscrits }} personne(s) inscrite(s)</strong>
                            {% if app.user %}
                                {% if event.isUserInscrit(app.user) %}
                                    <small class="text-success">
                                        <i class="bi bi-check-circle-fill me-1"></i>Vous êtes inscrit à cet événement
                                    </small>
                                {% else %}
                                    <small>Rejoignez cet événement dès maintenant !</small>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>

                    {% if app.user and app.user != event.createdBy %}
                        {% if event.isUserInscrit(app.user) %}
                            <form method="post" action="{{ path('app_event_desinscrire', {id: event.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('desinscrire' ~ event.id) }}">
                                <button type="submit" class="btn btn-warning btn-lg">
                                    <i class="bi bi-person-dash me-2"></i>Se désinscrire
                                </button>
                            </form>
                        {% else %}
                            <form method="post" action="{{ path('app_event_inscrire', {id: event.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('inscrire' ~ event.id) }}">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-person-plus me-2"></i>S'inscrire à cet événement
                                </button>
                            </form>
                        {% endif %}
                    {% elseif not app.user %}
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter pour s'inscrire
                        </a>
                    {% endif %}
                </div>

                <hr class="my-4">

                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-person-circle text-primary fs-3"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Organisé par</small>
                            <strong>{{ event.createdBy.name ?: event.createdBy.email }}</strong>
                            <small class="text-muted d-block">Le {{ event.createdAt|date('d/m/Y') }}</small>
                        </div>
                    </div>
                    
                    <a href="{{ path('app_events') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Retour aux événements
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la suppression
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Êtes-vous sûr de vouloir supprimer l'événement <strong>{{ event.titre }}</strong> ?</p>
                <p class="text-muted mb-0 mt-2">Cette action est irréversible.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Annuler
                </button>
                <form method="post" action="{{ path('app_event_delete', {id: event.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Supprimer définitivement
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
